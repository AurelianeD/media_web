// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

enum Theme_Name {
  GEOPOLITIC
  SPORT
  FASHION
  POLITIC
  GEOGRAPHY
  HISTORY
  LIFESTYLE
  ENVIRONMENT
  HEALTH
  CULTURE
  TRAVEL
  INTERNATIONAL
  NATIONAL
  REGIONAL
}

enum Format_Name {
  VIDEO
  ARTICLE
  PODCAST
}

enum Article_Frequency {
  DAY
  WEEK
  MONTH
}

model Article {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  title   String
  content String?
  link    String  @unique

  // Image URL
  image            String?
  reading_duration Int

  liked_by       User[] @relation("UserLikedArticles")
  recommended_by User[] @relation("UserRecommendedArticles")

  topic    Topic?  @relation(fields: [topic_id], references: [id])
  topic_id String?

  media    Media?  @relation(fields: [media_id], references: [id])
  media_id String?

  format Format_Name @default(ARTICLE)
}

model User {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user_name String? @unique
  type      Role    @default(USER)

  article_number    Int?
  article_frequency Article_Frequency?

  liked_articles       Article[] @relation("UserLikedArticles")
  recommended_articles Article[] @relation("UserRecommendedArticles")

  subscribed_themes  Theme[]
  subscribed_formats Format_Name[]

  followedBy User[] @relation("UserFollows")
  following  User[] @relation("UserFollows")
}

model Theme {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  type        Theme_Name
  title       String
  description String?
  slug        String     @unique

  subscribers User[]
  topic       Topic[]
}

model Topic {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  title             String
  slug              String @unique
  publish_date      String
  introduction_text String

  is_hot Boolean @default(false)
  audio  String?

  articles Article[]
  theme    Theme     @relation(fields: [theme_id], references: [id])
  theme_id String
}

model Media {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  title String
  slug  String @unique

  link String

  articles Article[]
}
