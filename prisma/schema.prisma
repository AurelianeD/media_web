// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

enum Theme_Name {
  GEOPOLITIC
  SPORT
  FASHION
  POLITIC
  GEOGRAPHY
  HISTORY
  LIFESTYLE
  ENVIRONMENT
  HEALTH
  CULTURE
  TRAVEL
  INTERNATIONAL
  NATIONAL
}

enum Format_Name {
  VIDEO
  ARTICLE
  PODCAST
}

enum Article_Frequency {
  DAY
  WEEK
  MONTH
}

model Article {
  id               String   @id @default(cuid())
  title            String
  content          String
  // save_by          User[]
  topic            Topic?   @relation(fields: [topic_id], references: [id])
  topic_id         String?
  publish_date     DateTime
  reading_duration Int
  recommanded_by   User[]
  media_name       Media?   @relation(fields: [media_id], references: [id])
  media_id         String
  image            String
  link             String
  audio            String
  format           Format?  @relation(fields: [format_id], references: [id])
  format_id        String
}

model User {
  id                String             @id @default(cuid())
  user_name         String?
  type              Role               @default(USER)
  liked_articles    Article[]
  theme             Theme[]
  format            Format[]
  article_number    Int?
  article_frequency Article_Frequency?
}

model Theme {
  id    String     @id @default(cuid())
  title Theme_Name
  slug  String
  User  User[]
  topic Topic[]
  // icon  String
}

model Format {
  id      String      @id @default(cuid())
  title   Format_Name
  slug    String
  User    User[]
  Article Article[]
}

model Topic {
  id                String    @id @default(cuid())
  introduction_text String
  articles          Article[]
  theme             Theme[]
  is_hot            Boolean
  title             String
  audio             String?
}

model Media {
  id      String    @id @default(cuid())
  title   String
  Article Article[]
}
